<%- include('partials/profileHeader') -%>
<header class="container py-6 md:px-14 lg:px-16 xl:px-20 flex flex-row w-full justify-between">
  <div class="flex flex-col justify-start w-96">
    <h2 class="text-xl font-bold pb-4">Welcome <%= user.profile.firstName %> <%= user.profile.lastName %></h2>
    <h2 class="text-xl font-bold">About:</h2>
    <p class="pt-2 pb-6">
        <%= user.profile.bio %>
    </p>
    <h2 class="text-3xl font-bold">Your Travels</h2>
  </div>
  <div class="flex w-56 justify-start">
    <a href="/post/newPost" class="btn btn-primary normal-case">New Entry</a>
  </div>
</header>

  <!-- grid container -->
  <div class="pb-6 grid justify-items-center grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-x-2 gap-y-5">
  <% for(var i=0; i<posts.length; i++) {%>
    <% if (user.id == posts[i].user) { %>
      <!-- product card def -->
  <div class="card w-72 bg-base-100 shadow-xl remy">
    <a href="post/<%=posts[i]._id%>" class="hover:drop-shadow-lg hover:opacity-70">
      <figure><img src="<%= posts[i].image%>" alt="post-image" /></figure>
    </a>
    <div class="card-body flex items-start border">
      <div class="grid grid-cols-2 gap-4 w-full">
        <h2 class="card-title"><%= posts[i].title%></h2>
        <span class="border text-center items-baseline"><%= formatDate(posts[i].date, 'MMM / YYYY')%></span>
      </div>
      <h2 class="card-title">
        Story
      </h2>
      <p><%= truncate(posts[i].story, 150)%></p>
      <div class="card-actions self-end">
        <a href="post/<%=posts[i]._id%>" class="btn btn-outline normal-case">Continue Reading</a> 
      </div>
    </div>
  </div>
    <% } %>      
    <% } %>
